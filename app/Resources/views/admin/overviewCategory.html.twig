{% extends 'base.html.twig' %}
{% block body %}
    <h1>Overview Category</h1>
    <ul>
        <li><a href="{{ path('admin_page') }}">Return to control panel</a></li>
        <li><a href="{{ path('addCategory') }}"><i class="small material-icons">add</i> New category</a></li>
    </ul>
    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
        </tr>
        </thead>
        <tbody>
        {% for c in category %}
            <tr>
                <td>{{ c.id }}</td>
                <td>{{ c.name }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}