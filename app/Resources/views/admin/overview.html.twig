{% extends 'base.html.twig' %}

{% block body %}
    <h3>Admin Control Panel</h3>
    <a href="{{ path('admin_allblogs') }}">All blogs overview</a>
    <a href="{{ path('overviewcat') }}">All categories overview</a>
    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Firstname</th>
            <th>Surname</th>
            <th>Email</th>
            <th>Role</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        {% for u in user %}
            <tr>
                <td>{{ u.id }}</td>
                <td>{{ u.firstname }}</td>
                <td>{{ u.surname }}</td>
                <td>{{ u.email }}</td>
                <td>{{ u.roles[0] }}</td>
                <td><a href="{{ path('detailuser', {'user_id': u.id}) }}"><i class="small material-icons">edit</i></a></td>
                <td><a href="{{ path('deleteUser', {'user_id': u.id}) }}"><i class="small material-icons">delete</i></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock body %}