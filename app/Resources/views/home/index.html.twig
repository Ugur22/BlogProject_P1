{% extends 'base.html.twig' %}

{% block body %}

    <h1>Take a look at our inspiring stories</h1>

    <div class="row">
        {% for blog in blogs %}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{ asset('assets/vendor/img/') }}{{ blog.img }}">
                    <div class="caption">
                        <h3>{{ blog.title }}</h3>
                        <p>{{ blog.text |length >50 ? blog.text |slice(0,50) ~ '...': blog.text }}</p>
                        <div id="author">
                            <span>{{ blog.user.firstname }} {{ blog.user.surname }} </span>
                            <span>{{ blog.date|date('d-m-y') }}</span>
                        </div>
                        <p><a href="/blog/detail/{{ blog.id }} " class="btn btn-primary" role="button">Read more...</a></p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
