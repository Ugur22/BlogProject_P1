{% extends 'base.html.twig' %}
{% block body %}
    <h1>Take a look at our inspiring stories</h1>
    {% for flashMessage in app.session.flashbag.get('success') %}
        {{ flashMessage }}
    {% endfor %}
    <div class="row">
        {% for blog in blogs %}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{ asset('assets/vendor/img/') }}{{ blog.img }}">
                    <div class="caption">
                        <h3>{{ blog.title }}</h3>
                        <p>{{ blog.text |length >200 ? blog.text |slice(0,200) ~ '...': blog.text }}</p>
                        <div id="author">
                            <span><a href="{{ path('myblog_page', {'userId': blog.user.id}) }}">{{ blog.user.firstname }} {{ blog.user.surname }}</a></span>
                            <span>{{ blog.date|date('d-m-y') }}</span>
                        </div>
                        <div id="cat">
                            {% for cat in  blog.categories %}
                                <span id="category"><a
                                            href="{{ path('category_page', {'categoryId': cat.id}) }}">{{ cat.name }}</a></span>
                            {% endfor %}
                        </div>
                        <p><a href="{{ path('blog_detail', {'blog_id': blog.id}) }}">read more...</a>
                        </p>
                    </div>
                    {% if is_granted('ROLE_USER') %}
                        <span id="likes"><a href="{{ path('addlike', {'blog_Id':blog.id}) }}"><i class="material-icons">	favorite</i></a>{{ blog.likes }}</span>
                     {% endif %}
                </div>
            </div>
            <div class="commentSection">
                {% for c in blog.comment %}
                    <div class="col-sm-5">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <strong>{{ c.user.getNameUser }}</strong> <span
                                        class="text-muted">commented {{ c.date|date('d-m-y H:i') }}</span></div>
                            <div class="panel-body">
                                <p>{{ c.text }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="form-group">
                <div class="col-sm-5">
                    <div class="panel panel-default">
                        {% if is_granted('ROLE_USER') %}
                            {#{{ form_start(form) }}#}
                            {#<span>{{ form_row(form.text) }}</span>#}
                            {#<button type="submit" class="btn btn-primary" formnovalidate>Add Comment</button>#}
                            {#{{ form_end(form) }}#}
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
