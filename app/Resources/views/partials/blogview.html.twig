<div class="row" id="blogs">
    {% for blog in blogs %}
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="{{ asset('assets/vendor/uploads/') }}{{ blog.img }}">
                <div class="caption">
                    <h2>{{ blog.title }}</h2>
                    <p>{{ blog.text|raw|length > 1000 ? blog.text|raw|slice(0,1000)|raw  : blog.text|raw }}...</p>
                    <div id="author">
                        <span><a href="{{ path('myblog_page', {'userId': blog.user.id}) }}">{{ blog.user.firstname }} {{ blog.user.surname }}</a></span>
                        <span>{{ blog.date|date('d-m-y') }}</span>
                    </div>
                    <div id="cat">
                        {% for cat in  blog.categories %}
                            <span id="category"><a
                                        href="{{ path('category_page', {'categoryId': cat.id}) }}">{{ cat.name }}</a></span>
                        {% endfor %}
                    </div>
                    <p><a href="{{ path('blog_detail', {'blog_id': blog.id}) }}">read more...</a>
                    </p>
                </div>
            </div>
        </div>
        <div class="commentSection" id="commentOutput">
            {% for c in blog.comment %}
                <div class="col-sm-5">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <strong>{{ c.user.getNameUser }}</strong>
                            <span class="text-muted">commented {{ c.date|date('d-m-y H:i') }}</span></div>
                        <div class="panel-body">
                            <p>{{ c.text }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="form-group">
            <div class="col-sm-5">
                <div class="panel panel-default">
                    {% if is_granted('ROLE_USER') %}
                        <form action="{{ path('addComment', {'blog_Id': blog.id }) }}" method="POST"
                              class="pull-right" id="form">
                            <input placeholder="Write a response" id="Commenttext" class="form-control" type="text"
                                   name="commentText">
                        </form>
                    {% endif %}
                </div>
            </div>
        </div>
    {% endfor %}
</div>